<% content_for :page_title do %>
  Subscription Configs
<% end %>

<div data-hook="admin_user_api_key" id="admin_user_edit_api_key" class="card mb-3">
  <div class="card-header">
    <h1 class="card-title mb-0 h5">
      General Settings
    </h1>
  </div>

  <div class="card-body">
    <%= form_for [:admin, @config], as: :subscription_config, url: spree.admin_subscription_config_url(@config), method: :put do |f| %>
      <div data-hook="admin_user_form_fields" class="row">
        <div class="col-12 col-md-6">
          <%= f.field_container :max_subscribers, class: ['form-group'] do %>
            <%= f.label :max_subscribers %>
            <%= f.email_field :max_subscribers, class: 'form-control' %>
            <%= f.error_message_on :max_subscribers %>
          <% end %>
        </div>

        <div data-hook="admin_subscription_config_edit_form_button">
          <%= render partial: 'spree/admin/shared/edit_resource_links', locals: { collection_url: spree.admin_subscription_configs_url } %>
        </div>
      </div>
    <% end %>
  </div>
</div>
